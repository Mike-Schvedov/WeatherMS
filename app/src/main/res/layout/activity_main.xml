<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/clear"
    tools:context=".MainActivity">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:outlineAmbientShadowColor="@color/white"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-114dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00°"
        android:id="@+id/temperature_txtview"
        android:textSize="120sp"
        android:textColor="@color/white"
        android:layout_marginLeft="28dp"
       android:layout_marginTop="48sp"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/city_txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="עיר, מדינה"
        android:textSize="24sp"
        android:layout_margin="24dp"
        android:textColor="@color/white"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temperature_txtview" />


    <View
        android:layout_width="200dp"
        android:layout_height="3dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/status_txtview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city_txtview"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/status_txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="בהיר"
        android:textStyle="bold"
        android:layout_margin="24dp"
        android:textColor="@color/white"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city_txtview" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layoutDirection="rtl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status_txtview">


        <TextView
            android:id="@+id/humidity_txtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="22dp"
            android:shadowColor="@color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="לחות : 0%"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/status_txtview" />


        <TextView
            android:id="@+id/rain_txtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="22dp"
            android:shadowColor="@color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="סיכוי לגשם: 0%"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/humidity_txtview"
            app:layout_constraintTop_toBottomOf="@+id/status_txtview" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="12dp"
        android:orientation="horizontal"
        android:background="@drawable/rounded_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.519">

        <LinearLayout
            android:id="@+id/day1"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="20/10"
                android:id="@+id/day1_date"
                android:textColor="@color/white" />
            <ImageView
                android:layout_width="50dp"
                android:layout_gravity="center"
                android:layout_height="50dp"
                android:src="@drawable/sunny_icon"
                android:id="@+id/imageview_day1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="30°"
                android:id="@+id/temp_day1"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/day2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="20/10"
                android:id="@+id/day2_date"
                android:textColor="@color/white" />
            <ImageView
                android:layout_width="50dp"
                android:layout_gravity="center"
                android:layout_height="50dp"
                android:src="@drawable/partly_cloudy_icon"
                android:id="@+id/imageview_day2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="30°"
                android:id="@+id/temp_day2"
                android:textColor="@color/white" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/day3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="20/10"
                android:id="@+id/day3_date"
                android:textColor="@color/white" />
            <ImageView
                android:layout_width="50dp"
                android:layout_gravity="center"
                android:src="@drawable/sunny_icon"
                android:layout_height="50dp"
                android:id="@+id/imageview_day3"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="30°"
                android:id="@+id/temp_day3"
                android:textColor="@color/white" />


        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>